            </MenuItem>
            <MenuItem Header="Quản trị" HorizontalContentAlignment="Center" Height="30" Width="74" FontSize="15"/>
        </Menu>
        <ToolBar Height="40" Margin="-5,29,0,0" VerticalAlignment="Top">
            <Button Margin="0,0,0,0" HorizontalContentAlignment="Center" Width="92" Content=" Thêm" FontFamily="Segoe UI Symbol" VerticalAlignment="Stretch" FontSize="15"/>
            <Button Margin="0,0,0,0" HorizontalContentAlignment="Center" Width="92" Content=" Thay đổi" FontFamily="Segoe UI Symbol" VerticalAlignment="Stretch" FontSize="15"/>
            <Label  Margin="0,3" Content="  Chọn" FontFamily="Segoe UI Symbol" HorizontalAlignment="Center" HorizontalContentAlignment="Center" FontSize="15"/>
