                </LinearGradientBrush>
            </Menu.Background>
            <MenuItem Header="Chức năng" HorizontalContentAlignment="Center" Height="30" Width="87" FontSize="15">
                <MenuItem Header="QL Lớp" HorizontalAlignment="Left" Height="26" Width="150"/>
